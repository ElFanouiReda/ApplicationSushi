<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/back">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_princ"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"/>


        <EditText
            android:id="@+id/editText"
            android:hint="Login"
            app:fontFamily="@font/averia_serif_libre_italic"
            android:textColorHint="#FFFFFF"
            android:drawableLeft="@drawable/ic_person"
            android:textColor="#ffffff"
            android:background="@drawable/edit_light_gray"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/editText2"
            android:hint="Nom"
            app:fontFamily="@font/averia_serif_libre_italic"
            android:textColorHint="#FFFFFF"
            android:drawableLeft="@drawable/ic_person"
            android:textColor="#ffffff"
            android:background="@drawable/edit_light_gray"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
             android:layout_below="@id/editText"
            android:ems="10"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/editText"
            app:layout_constraintStart_toStartOf="@id/editText"
            app:layout_constraintEnd_toEndOf="@id/editText"/>

    <EditText
        android:id="@+id/editText3"
        android:hint="Prenom"
        app:fontFamily="@font/averia_serif_libre_italic"
        android:textColorHint="#FFFFFF"
        android:drawableLeft="@drawable/ic_person"
        android:textColor="#ffffff"
        android:background="@drawable/edit_light_gray"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editText"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/editText2"
        app:layout_constraintStart_toStartOf="@id/editText"
        app:layout_constraintEnd_toEndOf="@id/editText"/>

    <EditText
        android:id="@+id/editText4"
        android:hint="Numero de telephone"
        app:fontFamily="@font/averia_serif_libre_italic"
        android:textColorHint="#FFFFFF"
        android:drawableLeft="@drawable/ic_person"
        android:textColor="#ffffff"
        android:background="@drawable/edit_light_gray"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editText"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/editText3"
        app:layout_constraintStart_toStartOf="@id/editText"
        app:layout_constraintEnd_toEndOf="@id/editText"/>

        <EditText
            android:id="@+id/editText5"
            android:hint="Mot de passe"
            app:fontFamily="@font/averia_serif_libre_italic"
            android:textColorHint="#FFFFFF"
            android:drawableLeft="@drawable/ic_password"
            android:textColor="#ffffff"
            android:background="@drawable/edit_light_gray"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText2"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/editText4"
            app:layout_constraintStart_toStartOf="@id/editText2"/>

        <EditText
            android:id="@+id/editText6"
            android:hint="Confirm mot de passe"
            app:fontFamily="@font/averia_serif_libre_italic"
            android:textColorHint="#FFFFFF"
            android:drawableLeft="@drawable/ic_password"
            android:textColor="#ffffff"
            android:background="@drawable/edit_light_gray"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText3"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/editText5"
            app:layout_constraintStart_toStartOf="@id/editText3"/>


        <Button
            android:id="@+id/buttonView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rectangle_pink"
            android:textColor="#FFFFFF"
            app:fontFamily="@font/averia_serif_libre_italic"
            android:textSize="15sp"
            android:layout_below="@id/editText4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="S'inscrire"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@id/editText6"
            app:layout_constraintStart_toStartOf="@id/editText4"
            app:layout_constraintEnd_toEndOf="@id/editText4"/>

        <Button
            android:id="@+id/buttonView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rectangle_red"
            android:textColor="#FFFFFF"
            app:fontFamily="@font/averia_serif_libre_italic"
            android:textSize="15sp"
            android:layout_below="@id/buttonView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Retour"
            app:layout_constraintTop_toBottomOf="@id/buttonView"
            app:layout_constraintStart_toStartOf="@id/buttonView"
            app:layout_constraintEnd_toEndOf="@id/buttonView"/>


</androidx.constraintlayout.widget.ConstraintLayout>