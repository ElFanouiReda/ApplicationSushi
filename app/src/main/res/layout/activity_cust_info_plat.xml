<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".CustInfoPlatActivity"
    android:id="@+id/fullScreen">




    <RelativeLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:background="@drawable/back3"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="60dp">


                <TextView
                    android:id="@+id/applicationname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Sushi"
                    android:textColor="@color/colorOrange"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/averia_serif_libre_italic"
                    app:layout_constraintStart_toStartOf="@id/buttonView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/buttonView"/>

                <Button
                    android:id="@+id/buttonView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/averia_serif_libre_italic"
                    android:background="@drawable/button_rectangle_white"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_below="@id/applicationname"
                    android:layout_centerHorizontal="true"
                    android:text="Se deconnecter"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/applicationname"
                    android:padding="8dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/ic_menu" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="Acceuil"
                            android:textColor="#1F3A4C"
                            android:textSize="15dp"
                            app:fontFamily="@font/averia_serif_libre_italic" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/ic_sushi" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="Categories"
                            android:textColor="#1F3A4C"
                            android:textSize="15dp"
                            app:fontFamily="@font/averia_serif_libre_italic" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/ic_basket" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="Panier"
                            android:textColor="#1F3A4C"
                            android:textSize="15dp"
                            app:fontFamily="@font/averia_serif_libre_italic" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/ic_shop" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="Restaurants"
                            android:textColor="#1F3A4C"
                            android:textSize="15sp"
                            app:fontFamily="@font/averia_serif_libre_italic" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoPlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_marginTop="315dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="8dp">

                    <RelativeLayout
                        android:id="@+id/rLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="fill_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_light_gray"/>

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="20dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_below="@id/imageView5"
                            android:text="Nom : "
                            app:fontFamily="@font/averia_serif_libre_italic"
                            android:textColor="@color/colorRedLight2"
                            android:layout_marginLeft="30dp"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/textView7"
                            android:text="XXXX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/textView6"
                            android:layout_marginLeft="30dp"
                            android:textSize="20dp"
                            android:layout_marginTop="190dp"
                            android:layout_alignBottom="@id/textView6"/>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Description : "
                            android:layout_below="@id/textView7"
                            app:fontFamily="@font/averia_serif_libre_italic"
                            android:textColor="@color/colorRedLight2"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_below="@id/textView7"
                            android:text="XXXXXXXX"
                            android:textSize="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/textView8"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Prix :"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/textView9"
                            app:fontFamily="@font/averia_serif_libre_italic"
                            android:textColor="@color/colorRedLight2"
                            android:layout_marginLeft="30dp"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_below="@id/textView9"
                            android:text="XXXX"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/textView10"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_alignBottom="@id/textView10"/>


                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="J'aime : "
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/textView13"
                            app:fontFamily="@font/averia_serif_libre_italic"
                            android:textColor="@color/colorRedLight2"
                            android:layout_marginLeft="30dp"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_below="@id/textView13"
                            android:text="XXXX"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/textView12"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_alignBottom="@id/textView12"/>

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Je n'aime pas : "
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/textView11"
                            app:fontFamily="@font/averia_serif_libre_italic"
                            android:textColor="@color/colorRedLight2"
                            android:layout_marginLeft="30dp"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_below="@id/textView11"
                            android:text="XXXX"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/textView14"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_alignBottom="@id/textView14"/>


                        <Button
                            android:id="@+id/buttonView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/button_rectangle_white"
                            android:text=" Ajouter au panier "
                            android:layout_below="@id/textView15"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"
                            android:textSize="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerVertical="true"/>

                        <ImageButton
                            android:id="@+id/buttonView2"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/button_rectangle_white"
                            android:layout_below="@id/textView15"
                            android:layout_alignParentLeft="true"
                            android:padding="5dp"
                            android:textSize="10dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_like"/>

                        <ImageButton
                            android:id="@+id/buttonView3"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/textView15"
                            android:background="@drawable/button_rectangle_white"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@id/buttonView2"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_dislike"
                            android:textSize="10dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </ScrollView>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>